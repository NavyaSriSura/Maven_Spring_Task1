<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <!-- bean definitions here -->

    <bean id="actor_id" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" value="Navya"/>
        <constructor-arg name="gender" index="1" value="female"/>
        <constructor-arg name="age" index="2" value="20"/>
    </bean>
    <bean id="actor_id2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" value="Shravya"/>
        <constructor-arg name="gender" index="1" value="female"/>
        <constructor-arg name="age" index="2" value="18"/>
    </bean>
    <bean id="actor_id3" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" index="0" value="Sagarika"/>
        <constructor-arg name="gender" index="1" value="female"/>
        <constructor-arg name="age" index="2" value="20"/>
    </bean>

    <bean id="movie" class="com.stackroute.domain.Movie">
        <constructor-arg index="0" ref="actor_id"/>
    </bean>
    <bean name="movie1,movie2" class="com.stackroute.domain.Movie" scope="singleton">
        <constructor-arg index="0" ref="actor_id2"/>
    </bean>


    <bean id="movie3" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg index="0" ref="actor_id3"/>
    </bean>

</beans>